<section class="new-post-section">
  <button type="submit" class="new-post-form" id="create-new-post">+ Create new post</button>
</section>

{{#if posts.length}}
<section>
  <h2>Your dashboard</h2>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/js/newPost.js"></script>